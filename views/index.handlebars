<div class="container">
	<div class="jumbotron">
	    <h1> Eat-Da-Burger! </h1>

        <h2> Make a Burger </h2>
    </div>

    <div class="col-md-6 text-center">
        <div class="row">
        {{#each burgers}}
        {{#unless devoured}}
            <div class="col-md-6 text-center">
            <span> {{this.id}} - {{this.burger_name}} </span>
                {{this.Date}}
            </div>
            <div class="col-md-6 text-center">
                <form class="button">
                    <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                    <button type="submit" class="btn btn-default">Eat that boi!</button>
                </form>
            </div>
            {{/unless}}
        {{/each}}
        </div>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 text-center">
            <form 
                <input type="text" class="form-control" name="name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter a burger and click the "Submit" button.</p>
        </div>
	</div>
</div>